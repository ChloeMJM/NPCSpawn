<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    android:layout_height="wrap_content"
    android:background="@color/bgColor">

    <!-- View Saved NPCs -->

    <!-- NPC Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edittext_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:background="@drawable/roundedcorners"
            android:backgroundTint="@color/genAllColor"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:text="Name: "
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:inputType="textNoSuggestions|textMultiLine" />

    </LinearLayout>

    <!-- Race -->
    <LinearLayout
        android:id="@+id/expanding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_race"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="5dp"
                android:text="Race: "
                android:textColor="@color/genColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edittext_race"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@null"
                android:text="Race"
                android:textColor="@color/textLightColor"
                android:textSize="18sp"
                android:inputType="textNoSuggestions|textMultiLine" />

        </LinearLayout>

        <!-- Gender and age -->
        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/viewColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_gender"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="5dp"
                android:text="Gender: "
                android:textColor="@color/genColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edittext_gender"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@null"
                android:text="Gender"
                android:textColor="@color/textLightColor"
                android:textSize="18sp"
                android:inputType="textNoSuggestions|textMultiLine" />

            <TextView
                android:id="@+id/textview_age"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="5dp"
                android:text="Age: "
                android:textColor="@color/genColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edittext_age"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@null"
                android:text="Age"
                android:textColor="@color/textLightColor"
                android:textSize="18sp"
                android:inputType="textNoSuggestions|textMultiLine" />
        </LinearLayout>

        <!-- Personality Quirk -->
        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/viewColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_persquirk"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="5dp"
                android:text="Personality Quirk: "
                android:textColor="@color/genColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edittext_persquirk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@null"
                android:text="Personality Quirk"
                android:textColor="@color/textLightColor"
                android:textSize="18sp"
                android:inputType="textNoSuggestions|textMultiLine" />
        </LinearLayout>

        <!-- Physical Quirk -->
        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/viewColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_physquirk"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="5dp"
                android:text="Physical Quirk: "
                android:textColor="@color/genColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edittext_physquirk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@null"
                android:text="Physical Quirk"
                android:textColor="@color/textLightColor"
                android:textSize="18sp"
                android:inputType="textNoSuggestions|textMultiLine" />

        </LinearLayout>

        <!-- Plot -->
        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/viewColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_plot"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="5dp"
                android:text="Plot Hook: "
                android:textColor="@color/genColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edittext_plot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@null"
                android:text="Plot"
                android:textColor="@color/textLightColor"
                android:textSize="18sp"
                android:inputType="textNoSuggestions|textMultiLine" />
        </LinearLayout>

        <!-- Save Edit and Delete -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundedcorners"
                android:backgroundTint="@color/viewColor"
                android:contentDescription="Save edit."
                android:drawableLeft="@drawable/ic_save"
                android:paddingLeft="20dp"
                android:paddingRight="40dp"
                android:textSize="18dp"
                android:text="Save Edit" />

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent"></Space>

            <Button
                android:id="@+id/button_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundedcorners"
                android:backgroundTint="@color/deleteColor"
                android:contentDescription="Delete NPC."
                android:drawableLeft="@drawable/ic_delete"
                android:paddingLeft="10dp"
                android:paddingRight="40dp"
                android:textSize="18dp"
                android:text="Delete NPC" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
